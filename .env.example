# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Database (local development - requires docker-compose up)
DATABASE_URL=postgresql://construgame:construgame_dev_password@localhost:5432/construgame

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=7d

# AWS Configuration (for production with RDS)
AWS_REGION=sa-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here

# AWS S3
AWS_S3_BUCKET=your-bucket-name

# AWS SNS for Push Notifications
AWS_SNS_PLATFORM_ARN_ANDROID=arn:aws:sns:sa-east-1:123456789:app/GCM/YourApp
AWS_SNS_PLATFORM_ARN_IOS=arn:aws:sns:sa-east-1:123456789:app/APNS/YourApp

# Email Configuration
EMAIL_FROM=noreply@construgame.com

# SendinBlue/Brevo (preferred email provider)
# If not set, will fallback to AWS SES
SENDINBLUE_API_KEY=your_sendinblue_api_key_here

# SMS Configuration
SMS_SENDER_ID=Construgame

# CORS Configuration
CORS_ORIGIN=*
